<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminFormFgm">
<!--    android:orientation="vertical"-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="731dp">


                    <EditText
                        android:id="@+id/etuucms"
                        android:layout_width="308dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="677dp"
                        android:background="@drawable/levendorborder"
                        android:hint="Enter your university number"
                        android:inputType="text"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/editfullname"
                        android:layout_width="292dp"
                        android:layout_height="57dp"
                        android:height="50dp"
                        android:background="@drawable/levendorborder"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.081" />

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="289dp"
                        android:layout_height="61dp"
                        android:height="50dp"
                        android:background="@drawable/levendorborder"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.524"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />


                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="288dp"
                        android:layout_height="59dp"
                        android:height="50dp"
                        android:background="@drawable/levendorborder"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.504"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.333" />

                    <EditText
                        android:id="@+id/etphone"
                        android:layout_width="278dp"
                        android:layout_height="66dp"
                        android:background="@drawable/levendorborder"
                        android:hint="Enter your number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.449" />


                    <EditText
                        android:id="@+id/dateOfbirth"
                        android:layout_width="286dp"
                        android:layout_height="55dp"
                        android:height="50dp"
                        android:background="@drawable/levendorborder"
                        android:hint="date of birth"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.536"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.587" />

                    <Spinner
                        android:id="@+id/spinnerSemester"
                        android:layout_width="132dp"
                        android:layout_height="53dp"
                        android:height="50dp"
                        android:background="@drawable/levendorborder"
                        android:entries="@array/semesters"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.229"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.706" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/resumeField"
                        android:layout_width="220dp"
                        android:layout_height="74dp"
                        android:layout_margin="30dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.132"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="68dp"
                                android:layout_height="68dp"
                                android:background="@drawable/resumeimagethree" />

                            <TextView
                                android:id="@+id/uploadResumeBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="20dp"
                                android:text="upload Your Resume"
                                android:textSize="15dp"
                                android:textStyle="italic" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="197dp"
                        android:layout_height="55dp"
                        android:backgroundTint="@color/black"
                        android:text="Save"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.826" />


                </androidx.constraintlayout.widget.ConstraintLayout>

<!--                    <ImageView-->
<!--                        android:id="@+id/resumePic"-->
<!--                        android:layout_width="290dp"-->
<!--                        android:layout_height="400dp"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintHorizontal_bias="0.495"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:layout_constraintVertical_bias="1.0" />-->
            </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
